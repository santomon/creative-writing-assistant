generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id    String  @id @default(cuid())
  name  String
  world World[]
}

model FileRegister {
  id        String     @id @default(cuid())
  name      String
  size      Int?
  fileKey   String
  userId    String
  citations Citation[]
}

model World {
  id          String         @id @default(cuid())
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  name        String
  description String
  userId      String
  user        User           @relation(fields: [userId], references: [id])
  characters  Character[]
  rules       ExplicitRule[]
  events      Event[]

  @@index([userId])
}

model Event {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  date        DateTime
  description String
  location    String
  worldId     String
  world       World    @relation(fields: [worldId], references: [id])

  @@index([worldId])
}

model Character {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  description String
  worldId     String
  world       World    @relation(fields: [worldId], references: [id])

  @@index([worldId])
}

model ExplicitRule {
  id          String     @id @default(cuid())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  name        String
  description String
  worldId     String
  citations   Citation[]
  world       World      @relation(fields: [worldId], references: [id])

  @@index([worldId])
}

model Citation {
  id         String       @id @default(cuid())
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  ruleId     String
  documentId String
  rule       ExplicitRule @relation(fields: [ruleId], references: [id])
  document   FileRegister @relation(fields: [documentId], references: [id])

  @@index([ruleId])
  @@index([documentId])
}
