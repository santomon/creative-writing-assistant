// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id    String  @id @default(cuid())
  name  String
  world World[]
}

model FileRegister {
  id      String @id @default(cuid())
  // createdAt DateTime @default(now())
  // updatedAt DateTime @updatedAt
  name    String
  size    Int?
  // type      String?
  fileKey String

  // user      User     @relation(fields: [userId], references: [id])
  userId    String
  citations Citation[]
}


model World {
id          String   @id @default(cuid())
createdAt   DateTime @default(now())
updatedAt   DateTime @updatedAt
name        String
description String
user        User     @relation(fields: [userId], references: [id])
userId      String
characters  Character[]
rules       ExplicitRule[]
events      Event[]

@@index([userId])
}
model Event {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  date        DateTime
  description String
  location    String

  world       World    @relation(fields: [worldId], references: [id])
  worldId     String

  @@index([worldId])
}

model Character {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  description String
  world       World    @relation(fields: [worldId], references: [id])
  worldId     String

  @@index([worldId])
}

model ExplicitRule {
  id          String     @id @default(cuid())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  name        String
  description String
  citations   Citation[]
  world       World      @relation(fields: [worldId], references: [id])
  worldId     String

  @@index([worldId])
}

model Citation {
  id         String       @id @default(cuid())
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  rule       ExplicitRule         @relation(fields: [ruleId], references: [id])
  ruleId     String
  document   FileRegister @relation(fields: [documentId], references: [id])
  documentId String

  @@index([ruleId])
  @@index([documentId])
}
